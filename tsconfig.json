{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "es2020",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "types": [
    "node",
    "jest"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__/*"
  ]
}