{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "es2020",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
  },
  "exclude": [
    "node_modules"
  ]
}